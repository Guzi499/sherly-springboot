<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.guzi.upr.mapper.admin.MenuMapper">


    <select id="listByRoleIds" resultType="com.guzi.upr.model.admin.Menu">
        SELECT
            t2.menu_id,
            t2.menu_type,
            t2.permission,
            t2.menu_name,
            t2.parent_id,
            t2.link,
            t2.icon,
            t2.sort
        FROM
            sys_role_menu t1,
            sys_menu t2
        WHERE
            t1.role_id IN
            <foreach collection="roleIds" item="roleId" open="(" close=")" separator=",">
                ${roleId}
            </foreach> AND
            t1.menu_id = t2.menu_id
    </select>
</mapper>
